{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "lib": [
            "esnext",
            "dom"
        ],
        "jsx": "react-jsx",
        "sourceMap": true,
        "strict": true,
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
    },
    "include": [
        "./src/*"
    ]
}